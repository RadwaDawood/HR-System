
@{
    ViewData["Title"] = "Add New User";
    
}
@model User

<section id="configuration">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
           
           
                <div class="card-header">
                  <div class="card-title-wrap bar-success">
                      <h4 class="card-title">Add user </h4>
                  </div>
              </div>
              <div class="card-body">
                <div class="px-3">

              <form asp-action="addUser" asp-controller="User" method="post" class="form form-horizontal">
                <div class="form-body">
                    <div class="form-group row">

@* ///    User Name  Input *@
           
                         <div class="col-md-3 label-control text-center"> @Html.LabelFor(n => n.Username) </div>
               
                        <div class="col-md-9">
                             <div> @Html.TextBoxFor(n => n.Username, new { @class = "form-control" })</div>
                             <div  class="text-danger" >@Html.ValidationMessageFor(n => n.Username)</div>
                        </div>
                    </div>

                    <div class="form-group row">

@* ///   Email  Input *@
                         <div class="col-md-3 label-control text-center"> @Html.LabelFor(n => n.Email ) </div>

                        <div class="col-md-9">
                             <div> @Html.TextBoxFor(n => n.Email, new { @class = "form-control" })</div>
                             <div  class="text-danger" >@Html.ValidationMessageFor(n => n.Email)</div>
                        </div>
                    </div>







                    <div class="form-group row">
@* ///   Password Input *@
                          <div class="col-md-3 label-control text-center"> @Html.LabelFor(n => n.Password ) </div>

                        <div class="col-md-9">
                             <div> @Html.PasswordFor(n => n.Password, new { @class = "form-control"  })</div>
                            <div  class="text-danger" >@Html.ValidationMessageFor(n => n.Password)</div>
                        </div>
                    </div>
                  <div class="form-group row">

@* /// Group   Input *@
                      <div class="col-md-3 label-control text-center"> @Html.LabelFor(n => n.Group.GroupName ) </div> 
                    <div class="col-md-9"> @Html.DropDownListFor(n => n.GroupId ,(SelectList) ViewBag.groups ,new { @class = "col-md-9 form-control" }) </div>

                  </div>
                    </div>


                     <div class="form-actions mt-5">
                  <a asp-action="index" asp-controller="user" class="btn btn-danger mr-1">
                    <i class="icon-trash"></i> Cancel
                  </a>
                  <button type="submit" class="btn btn-success">
                    <i class="icon-note"></i> Save
                  </button>
                  
                </div>
          
    
                </form>

                </div>
                </div>

               
            </div>
        </div>
    </div>
</section>


