@model List<Group>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@if (ViewBag.groupId == null || ViewBag.groupId.Read)
{
    <table class="table table-striped table-bordered zero-configuration">
        <thead>
            <tr>
                <th>Name</th>

                @if (ViewBag.groupId == null || ViewBag.groupId.Update)
                {
                    <th>Edit </th>
                }
                @if (ViewBag.groupId == null || ViewBag.groupId.Delete)
                {
                    <th>Delete</th>
                }

            </tr>
        </thead>
        <tbody>
            @foreach (var g in Model)
            {
                <tr class="user">
                    <input type="hidden" asp-for-id="@g.GroupId">
                    <td>@g.GroupName</td>


                    @if (ViewBag.groupId == null || ViewBag.groupId.Update)
                    {
                        <td>
                            <button class="btn btn-success mb-2"> 
                                <a asp-controller="Group" asp-action="EditGroup" asp-route-id="@g.GroupId">Edit</a>
                            </button>
                        </td>
                    }

                    @if (ViewBag.groupId == null || ViewBag.groupId.Delete)
                    {
                        <td>
                            <button class="btn btn-danger mb-2"> 
                                <a asp-controller="Group" asp-action="Delete" asp-route-id="@g.GroupId"  id="@g.GroupId" onclick = "return confirm('Are You Sure To Delete This Group')">Delete</a>
                            </button>
                        </td>
                    }

                </tr>
            }

        </tbody>

    </table>
}
