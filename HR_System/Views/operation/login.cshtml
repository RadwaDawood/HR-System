@model HR_System.Models.Admin

@{
    ViewData["Title"] = "login";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}



@*---------------------------------------------*@
  
        <div class="box">
          
          <div class="square" style="--i:0;"></div>
          <div class="square" style="--i:1;"></div>
          <div class="square" style="--i:2;"></div>
          <div class="square" style="--i:3;"></div>
          <div class="square" style="--i:4;"></div>
          <div class="square" style="--i:5;"></div>
          

		   
           <div class="container"> 
          <div class="form"> 
          <div class="text-center">
               <img src="~/img/logo.png" alt="company logo" width="80" >
          </div>
          

            <h2>Hr System Login </h2>
            <form method="post">
              <div class="inputBx">
                <input asp-for="AdminName" required="required">
                <span>Login</span>
              </div>


              <div class="inputBx password">
                <input id="password-input" asp-for="AdminPass" type="password" minlength="3" maxlength="12" required="required">
                <span>Password</span>
                <a href="#" class="password-control" onclick="return show_hide_password(this);"></a>
              </div>

              <p class="text-danger">@ViewBag.status</p>

              <label class="remember"><input type="checkbox" data-val="true" id="remberme" name="remberme" value="true">Remember Me </label>
              <div class="inputBx">

                <input type="submit" value="login"> 
              </div>
            </form>
             
            
          </div>
        </div>
         
          
        </div>

        


