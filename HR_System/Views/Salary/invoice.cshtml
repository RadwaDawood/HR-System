@using HR_System.Models
@using HR_System.ViewModels 

@model  SalaryVM

@{
    ViewData["Title"] = "invoice";
}
    
    <div class="card">
        <div class="card-body p-3">
            <div id="invoice-template" class="card-block">
                <!-- Invoice Company Details -->
                <div id="invoice-company-details" class="row">
                    <div class="col-6 text-left">
                        <img src="~/img/logo.png" alt="company logo" class="mb-2" width="70">
                        <ul class="px-0 list-unstyled">
                            <li class="text-bold-800">Pioneer Solutions Company </li>
                            <li>Cairo,</li>
                            <li>Naser City ,</li>
                            <li>102 Makrim Ebid,</li>
                                           
                        </ul>
                    </div>
                    <div class="col-6 text-right">
                        <h2>INVOICE</h2>
                        <p class="pb-3"># INV-001001</p>
                        <ul class="px-0 list-unstyled">
                           @* <li>Balance Due</li>
                            <li class="lead text-bold-800">2100 $</li>*@
                        </ul>
                    </div>
                </div>
                     
                <!--/ Invoice Customer Details -->
                <!-- Invoice Items Details -->
                    <div class="row">
                        <div class="col-md-6 col-sm-12 m-auto">
                            <p class="lead">Total due</p>
                            <div class="table-responsive">
                                <table class="table">
                                   
                                    <tbody>
                                        <tr>
                                            <td>Employee Name</td>
                                            <td class="text-right">@ViewBag.empName</td>
                                        </tr>
                                          <tr>
                                            <td class="text-bold-800">Department</td>
                                            <td class="text-bold-800 text-right">@ViewBag.departmentName</td>
                                        </tr>
                                        <tr>
                                            <td>Fixed Salary</td>
                                            <td class="text-right"> @ViewBag.fixedSalary $</td>
                                        </tr>
                                      
                                        <tr>
                                            <td>Attendence Day</td>
                                            <td class=" text-right">@ViewBag.attendenceDays</td>
                                        </tr>
                                       
                                         <tr>
                                            <td>Abscense Day</td>
                                            <td class="text-right">@ViewBag.abscenseDays</td>
                                        </tr>
                                        <tr>
                                            <td>Bonus Hours</td>
                                            <td class="text-right"> @ViewBag.BonusHours </td>
                                        </tr>
                                        <tr>
                                            <td> Minus Hours </td>
                                            <td class=" text-right"> @ViewBag.MinusHours </td>
                                        </tr>
                                        <tr>
                                            <td>Total Bonus</td>
                                            <td class=" text-right"> @ViewBag.TotalBonus $</td>
                                        </tr>
                                        <tr>
                                            <td>Minus Bonus</td>
                                            <td class=" text-right"> @ViewBag.TotalMinus $</td>
                                        </tr>
                                       
                                         <tr class="bg-grey bg-lighten-4">
                                            <td class="text-bold-800">Net Salary</td>
                                            <td class="text-bold-800 text-right pink">@ViewBag.NetSalary $</td>
                                        </tr>
                                         
                                    </tbody>
                                </table>
                            </div>
                            <div class="text-center">
                                <p>Authorized person</p>
                                <img src="~/img/signature-scan.png" alt="signature" class="width-250">
                                <h6>Amanda Orton</h6>
                                <p class="text-muted">Managing Director</p>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Invoice Footer -->
                <div id="invoice-footer">
                    <div class="row">
                        <div class="col-md-9 col-sm-12">
                            <h6>Terms &amp; Condition</h6>
                            <p>You know, being a test pilot isn't always the healthiest business in the world. We predict too
                                much for the next year and yet far too little for the next 10.</p>
                        </div>
                        <div class="col-md-3 col-sm-12 text-center">
                            <button type="button" class="btn btn-primary my-1"><i class="fa fa-paper-plane-o"></i>
                                <a href="mailto:email-to@gmail.com?&subject=Invoice Salary for @ViewBag.empName&body=Department:@ViewBag.departmentName,%0D%0ANameSalary: @ViewBag.fixedSalary $,%0D%0AAttendence Day:@ViewBag.attendenceDays,%0D%0AAbscense Day:@ViewBag.abscenseDays,%0D%0ABonus: @ViewBag.BonusHours $,%0D%0AMinus:@ViewBag.MinusHours $,%0D%0ATotal Bonus:@ViewBag.TotalBonus $,%0D%0AMinus Bonus:@ViewBag.TotalMinus $ ,%0D%0ANet Salary :@ViewBag.NetSalary $,%0D%0A">Send Invoice</a> </button>
                        </div>
                    </div>
                </div>
                <!--/ Invoice Footer -->
            </div>
        </div>
    </div>
     
                                       